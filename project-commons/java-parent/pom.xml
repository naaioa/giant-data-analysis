<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.spike.giantdataanalysis</groupId>
	<artifactId>java-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<description>giant-data-analysis中Java项目的Maven父项目</description>
	<inceptionYear>2017</inceptionYear>

	<modules>
		<module>../../data-management-infrastructure/infrastructure-netty</module>
		<module>../../data-management-infrastructure/infrastructure-jetty</module>
		<module>../../data-management-infrastructure/infrastructure-apache-zookeeper</module>
		<module>../../data-management-infrastructure/infrastructure-apache-curator</module>
		<module>../../data-management-infrastructure/infrastructure-apache-hadoop</module>
		<module>../../data-management-infrastructure/infrastructure-apache-hbase</module>
		<module>../../data-representation/representation-titan</module>
		<module>../../data-representation/representation-apache-tinkerpop</module>
		<module>../../data-representation/representation-apache-giraph</module>
		<module>../../temporal-data-and-realtime-algorithm/temporal-apache-storm</module>
		<module>../../temporal-data-and-realtime-algorithm/temporal-apache-kafka</module>
	</modules>

	<licenses>
		<license>
			<name>Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International License</name>
			<url>http://creativecommons.org/licenses/by-nc-sa/4.0/</url>
			<distribution>repo</distribution>
			<comments>知识共享署名-非商业性使用-相同方式共享 4.0 国际许可协议</comments>
		</license>
	</licenses>

	<!-- 开发者信息 -->
	<developers>
		<developer>
			<id>zhoujiagen</id>
			<name>Jia-Gen Zhou</name>
			<email>zhoujiagen@gmail.com</email>
			<!-- <url>http://www.cnblogs.com/zhoujiagen/</url> -->
		</developer>
	</developers>

	<!-- 项目属性 -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<guava.version>19.0</guava.version>
		<!-- log -->
		<slf4j.version>1.7.7</slf4j.version>
		<log4j.version>1.2.17</log4j.version>
		<!-- test -->
		<junit.version>4.11</junit.version>
		<!-- infrastructure -->
		<zookeeper.version>3.4.6</zookeeper.version>
		<curator.version>2.12.0</curator.version>
		<hadoop.version>2.7.2</hadoop.version>
		<mrunit.version>1.1.0</mrunit.version>
		<hbase.version>1.2.3</hbase.version>
		<netty.version>4.1.8.Final</netty.version>
		<jetty.version>9.4.3.v20170317</jetty.version>
		<!-- representation -->
		<titan.version>1.0.0</titan.version>
		<tinkerpop.version>3.2.3</tinkerpop.version>
		<giraph.version>1.2.0-hadoop2</giraph.version>
		<!-- temporal -->
		<storm.version>0.9.7</storm.version>
		<twitter4j.version>4.0.6</twitter4j.version>
		<kafka.version>0.9.0.0</kafka.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- Apache Commons依赖 START -->
			<!-- Lang -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-lang3</artifactId>
				<version>3.4</version>
			</dependency>
			<!-- Collections -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-collections4</artifactId>
				<version>4.0</version>
			</dependency>
			<!-- Codec -->
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.10</version>
			</dependency>
			<!-- Math -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-math3</artifactId>
				<version>3.6.1</version>
			</dependency>
			<!-- BeanUtils -->
			<dependency>
				<groupId>commons-beanutils</groupId>
				<artifactId>commons-beanutils</artifactId>
				<version>1.9.2</version>
			</dependency>
			<!-- Configuration -->
			<dependency>
				<groupId>commons-configuration</groupId>
				<artifactId>commons-configuration</artifactId>
				<version>1.10</version>
				<exclusions>
					<exclusion>
						<groupId>commons-lang</groupId>
						<artifactId>commons-lang</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<!-- Net -->
			<dependency>
				<groupId>commons-net</groupId>
				<artifactId>commons-net</artifactId>
				<version>3.4</version>
			</dependency>
			<!-- IO -->
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>2.4</version>
			</dependency>
			<!-- Logging -->
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.2</version>
			</dependency>
			<!-- Pool -->
			<dependency>
				<groupId>commons-pool</groupId>
				<artifactId>commons-pool</artifactId>
				<version>1.6</version>
			</dependency>
			<!-- Proxy -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-proxy</artifactId>
				<version>1.0</version>
			</dependency>
			<!-- Compress -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-compress</artifactId>
				<version>1.11</version>
			</dependency>
			<!-- Apache Commons依赖 END -->

			<!-- guave -->
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>${guava.version}</version>
			</dependency>

			<!-- log -->
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>${log4j.version}</version>
			</dependency>

			<!-- junit -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.0</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.12.4</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
